<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/bgLightBlue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInputTop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/bgLighterBlue"
            android:padding="10dp"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvOperator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bgLighterBlue"
            android:gravity="end"
            android:padding="10dp"
            android:textSize="21sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/bgLighterBlue"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonNum7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_7"
           />

        <Button
            android:id="@+id/buttonNum8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_8"
            />

        <Button
            android:id="@+id/buttonNum9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_9"
            />

        <Button
            android:id="@+id/buttonSymDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:backgroundTint="@color/symbolGreen"
            android:text="@string/divide"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonNum4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_4"
            />

        <Button
            android:id="@+id/buttonNum5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_5"
            />

        <Button
            android:id="@+id/buttonNum6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_6"
            />

        <Button
            android:id="@+id/buttonSymMulti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:backgroundTint="@color/symbolGreen"
            android:text="@string/multi"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonNum1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_1"
             />

        <Button
            android:id="@+id/buttonNum2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_2"
            />

        <Button
            android:id="@+id/buttonNum3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_3"
            />

        <Button
            android:id="@+id/buttonSymMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/symbolGreen"
            android:onClick="onOperator"
            android:text="@string/minus"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonNumDeci"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/numberBlue"
            android:onClick="onDecimalPoint"
            android:text="@string/decimal"
            />

        <Button
            android:id="@+id/buttonNum0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="@color/numberBlue"
            android:text="@string/_0"
            />

        <Button
            android:id="@+id/buttonSymClr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onClear"
            android:backgroundTint="@color/clearRed"
            android:text="@string/clr"
            />



        <Button
            android:id="@+id/buttonSymPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:backgroundTint="@color/symbolGreen"
            android:text="@string/plus"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonSymEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="onEquals"
            android:backgroundTint="@color/equalsPink"
            android:text="@string/equals"
            />






    </LinearLayout>

</LinearLayout>